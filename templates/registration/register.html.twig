{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.pseudo, {label: 'Pseudo : '}) }}
        {{ form_row(registrationForm.nom, {label: 'Nom : '}) }}
        {{ form_row(registrationForm.prenom, {label: 'Prénom : '}) }}
        {{ form_row(registrationForm.dob, {label: 'Date de naissance :'}) }}
        {{ form_row(registrationForm.tel, {label: 'N° de téléphone : '}) }}
        {{ form_row(registrationForm.adresse, {label: 'Adresse :'}) }}
        {{ form_row(registrationForm.ville, {label: 'Ville : '}) }}
        {{ form_row(registrationForm.cp, {label: 'Code Postal : '}) }}
        {{ form_row(registrationForm.email, {label: 'Adresse email : '}) }}



        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {label: 'J\'accepte les conditions d\'utilisation'}) }}

        <button type="submit" class="btn">Inscription</button>
    {{ form_end(registrationForm) }}
{% endblock %}
